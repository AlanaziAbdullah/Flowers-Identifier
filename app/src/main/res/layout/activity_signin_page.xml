<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SigninPage"
    >

    <TextView
        android:id="@+id/SigninTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_in"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        />

    <EditText
        android:id="@+id/signInEmailField"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/SigninTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:hint="@string/e_mail"
        android:textColor="#c4c4c4"
        />

    <EditText
        android:id="@+id/signInPasswordField"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/signInEmailField"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textColor="#c4c4c4"
        />

    <Button
        android:id="@+id/signInButtonAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signInPasswordField"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:text="@string/sign_in"
        />

</RelativeLayout>